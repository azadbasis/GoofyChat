<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.azhar.chat.goofy.goofychat.StatusActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_bar_layout"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_bar_layout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="144dp"
        android:id="@+id/textInputLayout6">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/stattus_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_status"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textInputLayout6"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="61dp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Save Changes"/>


</RelativeLayout>
